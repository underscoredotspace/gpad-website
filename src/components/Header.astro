---
import { Image } from '@astrojs/image/components';
import { MenuButton } from './MenuButton';
const { title } = Astro.props;
---

<header class="fixed w-full bg-zinc-800/70 text-zinc-300 backdrop-blur">
	<div
		class="h-16 max-w-screen-lg flex flex-row space-x-3 justify-between items-center px-4 mx-auto"
	>
		<h1 hidden>GPAD Crew</h1>
		<Image src="/logo.webp" format="webp" width={40} height={40} alt="GPAD Crew logo" />
		<h2>{title}</h2>
		<MenuButton />
	</div>
</header>
